{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"maxSize": 100000,
		"includes": [
			"**/*.ts",
			"**/*.tsx",
			"**/*.jsx",
			"**/*.css",
			"**/*.json",
			"**/*.js",
			"**/*.html",
			"!**/routeTree.gen.ts",
			"!**/components/ui",
			"!**/dist",
			"!**/node_modules"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": { "noNonNullAssertion": "off" },
			"recommended": true,
			"a11y": {
				"useButtonType": "off"
			},
			"security": {
				"noBlankTarget": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none",
			"enabled": true,
			"lineWidth": 120
		},
		"assist": {
			"enabled": true
		},
		"parser": { "allowTrailingCommas": false }
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"recommended": true,
				"organizeImports": "on",
				"useSortedProperties": "on",
				"useSortedAttributes": "off",
				"useSortedKeys": "off"
			}
		}
	},
	"css": {
		"assist": { "enabled": true },
		"parser": {
			"tailwindDirectives": true
		},
		"formatter": { "enabled": true }
	},
	"html": {
		"formatter": { "enabled": true }
	}
}
